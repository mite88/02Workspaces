<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans https://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- 
	아래 bean태그를 java코드로 표현시...
	
	import di.point;
	Point pointXY = new Point(3,4);
	 -->
	 
	 <!-- <bean id="참조변수명" class="패키지를 포함한 클래스 경로"> -->
	<bean id="pointXY" class="di.Point">
		<!-- 생성자를 통해 빈 생성 시 사용 생성자의 인자들을 지정하여 초기화 -->
		<constructor-arg value="3" />
		<constructor-arg>
			<value>4</value>
		</constructor-arg>
	</bean>
	
	<!-- 두번째 dean은 setter()을 통해 초기화 함 -->
	<bean id="circle" class="di.Circle">
		<!-- 멤버변수 point를 setter를 통해 초기화함 -->
		<property name="point">
			<!-- 미리생성된 Point객체 초기값으로 사용함 -->
			<ref bean="pointXY" />
		</property>
		<property name="radian" value="20" />
	</bean>
</beans>